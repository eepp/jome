codepoints=$(jome \-f cp \-p U)

if (($? != 0)); then
    exit 1
fi

xdotool key \-\-delay 20 "$codepoints"
.fam
.fi
.if n .RE
.RE
.sp
With \fBxdotool type\fP
.RS 4

.sp
.if n .RS 4
.nf
